{
  "name": "naizo-launcher",
  "version": "1.0.6",
  "description": "NAIZO Launcher - Premium Minecraft Launcher with Fabric Mod Support",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "keywords": [
    "minecraft",
    "launcher",
    "electron",
    "naizo"
  ],
  "author": "Naizo",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.0"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "electron-updater": "^6.1.7"
  },
  "build": {
    "appId": "com.naizo.launcher",
    "productName": "NAIZO Launcher",
    "files": [
      "**/*",
      "!minecraft/**",
      "!modpack-source/**",
      "!dist/**",
      "!node_modules/.cache/**",
      "!*.md",
      "!.git/**"
    ],
    "directories": {
      "output": "dist"
    },
    "publish": {
      "provider": "github",
      "owner": "MeherBenSalem",
      "repo": "NaizoLauncher"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/icons/win/icon.ico",
      "artifactName": "${productName}-Setup-${version}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "perMachine": false,
      "installerIcon": "assets/icons/win/icon.ico",
      "uninstallerIcon": "assets/icons/win/icon.ico"
    }
  }
}