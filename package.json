{
  "name": "nightbeam-launcher",
  "version": "1.0.0",
  "description": "NightBeam Launcher - Premium Minecraft Launcher with Fabric Mod Support",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "keywords": [
    "minecraft",
    "launcher",
    "electron"
  ],
  "author": "Naizo",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.0"
  },
  "dependencies": {
    "axios": "^1.6.0"
  },
  "build": {
    "appId": "com.nightbeam.launcher",
    "productName": "NightBeam Launcher",
    "files": [
      "**/*",
      "!minecraft/**",
      "!modpack-source/**",
      "!dist/**",
      "!node_modules/.cache/**",
      "!*.md",
      "!.git/**"
    ],
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/icons/win/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "perMachine": false,
      "installerIcon": "assets/icons/win/icon.ico",
      "uninstallerIcon": "assets/icons/win/icon.ico"
    }
  }
}